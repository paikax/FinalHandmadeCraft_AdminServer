<!-- Toggle button for chat -->
<button id="toggleChat" class="btn btn-info btn-lg mt-3 fixed bottom-4 right-4 z-10">Read users message</button>

<!-- TalkJS Container -->
<div id="talkjs-container" style="height: 500px; display: none; position: fixed; bottom: 10px; right: 10px;"></div>

<script src="https://cdn.talkjs.com/talk.js"></script>
<script>
    // Function to initialize TalkJS
    function initializeTalk() {
        if (typeof Talk !== 'undefined') {
            var me = new Talk.User({
                id: '98', // Replace with user ID
                name: 'Admin', // Replace with user name
                email: 'admin@gmail.com', // Replace with user email
                photoUrl: 'https://example.com/avatar.jpg', // Replace with user avatar URL
                welcomeMessage: 'Hey there! How can I help you?' // Optional welcome message
            });

            window.talkSession = new Talk.Session({
                appId: 'tFfHQ5OV', // Replace with your Talk.js App ID
                me: me
            });

            var otherUser = new Talk.User({
                id: '2f9ca6cd-04d0-4ec5-9294-300208e1667f', // Replace with other user ID
                name: 'Client', // Replace with other user name
                email: 'phongspacenasa@gmail.com', // Replace with other user email
                photoUrl: 'https://your-photo-url.jpg' // Replace with other user avatar URL
            });

            var conversation = talkSession.getOrCreateConversation(Talk.oneOnOneId(me, otherUser));
            conversation.setParticipant(me);
            conversation.setParticipant(otherUser);

            var chatbox = talkSession.createChatbox(conversation);
            chatbox.mount(document.getElementById("talkjs-container"));
        } else {
            console.error('Talk.js library is not loaded.');
        }
    }

    // Function to toggle chat visibility
    function toggleChat() {
        var chatContainer = document.getElementById("talkjs-container");
        chatContainer.style.display = chatContainer.style.display === "none" ? "block" : "none";
    }

    // Initialize TalkJS when the DOM is loaded
    document.addEventListener("DOMContentLoaded", function() {
        initializeTalk();

        // Add event listener to toggle chat button
        document.getElementById("toggleChat").addEventListener("click", toggleChat);
    });
</script>
