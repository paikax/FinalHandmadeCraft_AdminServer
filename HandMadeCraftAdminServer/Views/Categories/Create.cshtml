@model HandMadeCraftAdminServer.Models.Category.Category

@{
    ViewBag.Title = "Create Category";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2>Create Category</h2>

    <form asp-action="Create" class="mt-3">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Category Name:</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Category Description:</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
