@model HandMadeCraftAdminServer.Models.Category.Category

@{
    ViewBag.Title = "Delete Category";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2>Delete Category</h2>

    <div class="mt-3">
        <h3>Are you sure you want to delete this category?</h3>
        <div class="row mt-3">
            <div class="col-sm-2">Category Name:</div>
            <div class="col-sm-10">@Model.Name</div>
            <div class="col-sm-2">Category Description:</div>
            <div class="col-sm-10">@Model.Description</div>
        </div>
        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>